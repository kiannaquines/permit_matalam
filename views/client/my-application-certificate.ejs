<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Certificate &mdash; A WEB-BASED PERMIT MANAGEMENT SYSTEM FOR MATALAM FIRE STATION</title>

  <!-- General CSS Files -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

  <!-- CSS Libraries -->

  <!-- Template CSS -->
  <link rel="stylesheet" href="https://permit-matalam.onrender.com/css/style.css">
  <link rel="stylesheet" href="https://permit-matalam.onrender.com/css/components.css">
</head>

<body>
  <div id="app">
    <div class="main-wrapper">
      <%- include('../components/navbar.ejs') %>
      <%- include('../components/sidebar.ejs') %>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>My Certificate Application</h1>
          </div>

          <div class="section-body">
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h4>My Certificates Application</h4>
                    <div class="card-header-action">
                      <a href="/client/apply-certificate/" class="btn btn-primary">Add New Certificate Application <i class="fas fa-plus"></i></a>
                    </div>
                  </div>
                  <div class="card-body p-0">
                    <div class="table-responsive table-invoice">
                      <table class="table table-striped">
                        <tr>
                          <th>Application ID</th>
                          <th>Owner</th>
                          <th>Establishment</th>
                          <th>Contact Number</th>
                          <th>Status</th>
                          <th>Date Applied</th>
                          <th>Action</th>
                        </tr>
                        <% if (applications.length == 0) {%>
                          <tr>
                            <td class="text-center" colspan="7">Currently You Don't Have Application</td>
                          </tr>
                        <% } else{ %>
                        <% applications.forEach(application => { %>
                          <tr>
                            <td><a href="#"><%= application.application_number %></a></td>
                            <td class="font-weight-600"><%= application.owner_name %></td>
                            <td class="font-weight-600"><%= application.establishment_name %></td>
                            <td class="font-weight-600"><%= application.contact_number %></td>
                            <td><div class="badge badge-<% if(application.application_status == 'Approved'){ %>success<% }else{ %>warning<%}%>"><%= application.application_status %></div></td>
                            <td><%= application.date_added.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" }) %></td>
                            <td>
                              <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
                                  <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item" href="/client/edit-certificate/<%= application._id %>">Edit Application Details</a>
                                  <% if(application.application_status == 'Approved'){ %>
                                  <a class="dropdown-item" href="/client/generate-certificate-form/<%= application._id %>">Generate Certificate Form</a>
                                  <% } %>
                                </div>
                            </td>
                          </tr>
                        <% }); %>
                        <% } %>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <%- include('../components/footer.ejs') %>
    </div>
  </div>

  <!-- General JS Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script src="https://permit-matalam.onrender.com/js/stisla.js"></script>

  <!-- JS Libraies -->

  <!-- Template JS File -->
  <script src="https://permit-matalam.onrender.com/js/scripts.js"></script>
  <script src="https://permit-matalam.onrender.com/js/custom.js"></script>

  <!-- Page Specific JS File -->
</body>
</html>
