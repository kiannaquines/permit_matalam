<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Profile &mdash; A WEB-BASED PERMIT MANAGEMENT SYSTEM FOR MATALAM FIRE STATION</title>

  <!-- General CSS Files -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

  <!-- CSS Libraries -->

  <!-- Template CSS -->
  <link rel="stylesheet" href="http://localhost:8080/css/style.css">
  <link rel="stylesheet" href="http://localhost:8080/css/components.css">
</head>

<body>
  <div id="app">
    <div class="main-wrapper">
      <%- include('components/navbar.ejs') %>
      <%- include('components/sidebar.ejs') %>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>Members Profile Page</h1>
          </div>

          <div class="section-body">
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h4>Kian Naquines Profile</h4>
                  </div>
                  <div class="card-body p-3">
                    <form id="updateProfileForm" class="needs-validation" novalidate="" enctype="multipart/form-data">
                      <input id="id" type="hidden" class="form-control" name="id" value="<%= user_date._id %>" required>
                      <div class="row">
                        <div class="form-group col-4">
                          <label for="firstName">First Name</label>
                          <input id="firstName" type="text" class="form-control" name="firstName" value="<%= user_date.firstName %>" required>
                          <div class="invalid-feedback">
                            What's your firstname?
                          </div>
                        </div>
                        <div class="form-group col-4">
                          <label for="lastName">Last Name</label>
                          <input id="lastName" type="text" class="form-control" name="lastName" value="<%= user_date.lastName %>" required>
                          <div class="invalid-feedback">
                            What's your lastname?
                          </div>
                        </div>

                        <div class="form-group col-4">
                          <label for="userName">Username</label>
                          <input id="userName" type="text" class="form-control" name="userName" value="<%= user_date.username %>" required>
                          <div class="invalid-feedback">
                            What's your username?
                          </div>
                        </div>
                      </div>
    
                      <div class="form-group">
                        <label for="profile_img">Profile Image</label>
                        <input id="profile_img" type="file" class="form-control" name="profile_img" required>
                        <div class="invalid-feedback">
                          Upload your profile image.
                        </div>
                      </div>
    
                      <div class="form-divider">
                        Complete Address
                      </div>
                      <div class="row">
                        <div class="form-group col-6">
                          <label>Municipality</label>
                          <input type="text" class="form-control" id="municipality" name="municipality" value="<%= user_date.municipality%>" required>
                          <div class="invalid-feedback">
                            What's your municipality?
                          </div>
                        </div>
                        <div class="form-group col-6">
                          <label>Province</label>
                          <input type="text" class="form-control" id="province" name="province" value="<%= user_date.province%>" required>
                          <div class="invalid-feedback">
                            What's your province?
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="form-group col-6">
                          <label>Barangay</label>
                          <input type="text" class="form-control" id="barangay" name="barangay" value="<%= user_date.barangay%>" required>
                          <div class="invalid-feedback">
                            What's your barangay?
                          </div>
                        </div>
                        <div class="form-group col-6">
                          <label>Postal Code</label>
                          <input type="text" class="form-control" id="postalCode" name="postalCode" value="<%= user_date.postalCode %>" required>
                          <div class="invalid-feedback">
                            What's your postal code?
                          </div>
                        </div>
                      </div>
    
                      <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg">
                          Save Changes
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <%- include('components/footer.ejs') %>
    </div>
  </div>

  <!-- General JS Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script src="http://localhost:8080/js/stisla.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- JS Libraies -->
  <script src="http://localhost:8080/js/scripts.js"></script>
  <script src="http://localhost:8080/js/custom.js"></script>
  <script>
    $(document).ready(function(){
      $("#updateProfileForm").on("submit", function(e){
        e.preventDefault();
        const formData = new FormData()
        const id = $("#id").val()
        const firstName = $("#firstName").val();
        const lastName = $("#lastName").val();
        const userName = $("#userName").val();
        const profile_img = $("#profile_img").prop('files')[0]
        const municipality = $("#municipality").val();
        const province = $("#province").val();
        const barangay = $("#barangay").val();
        const postalCode = $("#postalCode").val();

        formData.append('id',id)
        formData.append('firstName',firstName)
        formData.append('lastName',lastName)
        formData.append('userName',userName)
        formData.append('profile_img',profile_img)
        formData.append('municipality',municipality)
        formData.append('province',province)
        formData.append('barangay',barangay)
        formData.append('postalCode',postalCode)


        if(firstName == "" || lastName == "" || userName == "" || profile_img == null ||municipality == "" ||province == "" ||barangay == "" || postalCode == ""){

          Swal.fire({
            title: 'Oppsss',
            text: 'All fields are required, please fill up and try again.',
            icon: 'warning',
            confirmButtonText: 'Confirm'
          });

          return;
        }

        $.ajax({
          url: 'http://localhost:8080/client/profile',
          method: 'POST',
          data: formData,
          processData: false,
          cache: false,
          contentType: false,
          success: function(response){
            if(response.message == "success"){
              Swal.fire({
                title: 'Horayyy',
                text: 'You have successfully update your profile information.',
                icon: 'success',
                confirmButtonText: 'Done'
              });
              return;
            }else if(response.message == "unsuccessfull"){
              Swal.fire({
                title: 'Oppsss',
                text: 'You cannot update your profile information, please try again.',
                icon: 'warning',
                confirmButtonText: 'Done'
              });
              return;
            }
          },
          error: function(jqXHR, textStatus, errorThrown){
            const messages = jqXHR.responseJSON
            
            if(messages.message == "disallowed"){
              Swal.fire({
                title: 'Disallowed File',
                text: 'Sorry, you are trying to upload a file that is not allowed.',
                icon: 'error',
                confirmButtonText: 'Done'
              });
              return;
            }

            if(messages.message == "unsupported"){
              Swal.fire({
                title: 'Unsupported File',
                text: 'Sorry, you are trying to upload a file that is not supported by the system.',
                icon: 'error',
                confirmButtonText: 'Done'
              });
              return;
            }
          }
        })

      })
    });
  </script>
</body>
</html>
